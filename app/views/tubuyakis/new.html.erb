<html>
  <body>
    <header>
      <%= image_tag('japan.jpg') %>
    </header>

    <%= form_with(model: @tubuyaki, local: true) do |form| %>
      <% if @tubuyaki.errors.any? %>
        <div id="error_explanation">
          <h2><%= @tubuyaki.errors.count %>件のエラーがあります。</h2>
          <ul>
            <% @tubuyaki.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
       <% end %>
      <div class="tubuyaki_title" %>
        <%= form.text_field :content %>
      </div>
      <%= form.submit("つぶやく")%>
      <br><%= link_to "つぶやき一覧をみる", tubuyakis_path %>
    <% end %>

  </body>

</html>

